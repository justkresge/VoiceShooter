<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hooper.pushshot2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.hooper.pushshot2.SplashActivity"
            android:label="@string/app_name" 
             android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hooper.pushshot2.GameActivity"
            android:label="@string/title_activity_game" 
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="com.hooper.pushshot2.GameActivity" />
				<category android:name="android.intent.category.DEFAULT" />
               
            </intent-filter>
        </activity>
        <activity
            android:name="com.hooper.pushshot2.MenuActivity"
            android:label="@string/title_activity_menu"
            android:screenOrientation="landscape"  >
            <intent-filter>
                <action android:name="com.hooper.pushshot2.MenuActivity" />
				<category android:name="android.intent.category.DEFAULT" />
               
            </intent-filter>
        </activity>
        <activity
            android:name="com.hooper.pushshot2.ScoresActivity"
            android:label="@string/title_activity_scores"
            android:screenOrientation="landscape"  >
            <intent-filter>
                <action android:name="com.hooper.pushshot2.ScoresActivity" />
				<category android:name="android.intent.category.DEFAULT" />
               
            </intent-filter>
        </activity>
        <activity
            android:name="com.hooper.pushshot2.HelpActivity"
            android:label="@string/title_activity_help" 
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="com.hooper.pushshot2.HelpActivity" />
				<category android:name="android.intent.category.DEFAULT" />
               
            </intent-filter>
        </activity>
    </application>

</manifest>
